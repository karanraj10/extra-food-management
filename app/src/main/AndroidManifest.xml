<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hackathon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Init"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ngo.ReportActivity"></activity>
        <activity android:name=".donor.GalleryActivity" />
        <activity android:name=".ngo.AcceptRequestActivity" />
        <activity android:name=".donor.AddFoodDetails" />
        <activity android:name=".donor.DonorActivity" />
        <activity android:name=".login.YourProfileActivity" />
        <activity android:name=".ngo.NgoActivity" />
        <activity android:name=".login.ResetPasswordActivity" />
        <activity android:name=".login.SendOtpActivity" />
        <activity android:name=".login.SignupActivity" />
        <activity android:name=".login.SendOtpSignupActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>